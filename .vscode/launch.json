{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Nodemon",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector"
    },
    {
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "name": "nodemon",
      "program": "${workspaceFolder}/src/server.ts",
      "request": "launch",
      "restart": true,
      "sourceMaps": true,
      "runtimeExecutable": "nodemon",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceRoot}/dist"
      ],      
      "type": "pwa-node",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}